<div class="post-input">
    <a href="/dashboard" class="dashboard-back">&larr; Back to Dashboard</a>
    <h2 class="title-create">Create New Blog Post</h2>

    <form class="create-post">
        <div class="blog-title">
            <label for="post-title">Title:</label>
            <input type="text" id="post-title" class="post-title" name="post-title" placeholder="Insert blog title here...">
        </div>

        <div class="blog-body">
            <label for="post-body">Body:</label>
            <input type="text" id="post-body" class="post-body" name="post-body" placeholder="Insert post content here...">
        </div>

        <button type="submit" class="btn publish-btn">Publish</button>
    </form>
</div>

<script src="/javascript/createPost.js"></script>